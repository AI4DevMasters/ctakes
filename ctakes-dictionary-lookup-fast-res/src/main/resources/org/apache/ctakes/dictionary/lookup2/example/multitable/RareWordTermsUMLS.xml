<lookupSpecification>
   <!--  Defines what dictionaries will be used  -->
   <rareWordDictionaries>
      <!-- typeId 6 is the cTakes constant for anatomical sites  -->
      <dictionary id="cTakesAnat" externalResourceKey="cTakesUmls" caseSensitive="false" typeId="6">
         <implementation>
            <rareWordUmls tableName="cTakesAnat"/>
         </implementation>
      </dictionary>
      <!-- typeId 2 is the cTakes constant for diseases and disorders  -->
      <dictionary id="cTakesDiso" externalResourceKey="cTakesUmls" caseSensitive="false" typeId="2">
         <implementation>
            <rareWordUmls tableName="cTakesDiso"/>
         </implementation>
      </dictionary>
      <!-- typeId 3 is the cTakes constant for the invented semantic group "finding", aka signs and symptoms  -->
      <dictionary id="cTakesFind" externalResourceKey="cTakesUmls" caseSensitive="false" typeId="3">
         <implementation>
            <rareWordUmls tableName="cTakesFind"/>
         </implementation>
      </dictionary>
      <!-- typeId 5 is the cTakes constant for procedures  -->
      <dictionary id="cTakesProc" externalResourceKey="cTakesUmls" caseSensitive="false" typeId="5">
         <implementation>
            <rareWordUmls tableName="cTakesProc"/>
         </implementation>
      </dictionary>
      <!-- typeId 1 is the cTakes constant for drugs  -->
      <dictionary id="cTakesDrug" externalResourceKey="cTakesUmls" caseSensitive="false" typeId="1">
         <implementation>
            <rareWordUmls tableName="cTakesDrug"/>
         </implementation>
      </dictionary>
   </rareWordDictionaries>
   <rareWordConsumer className="org.apache.ctakes.dictionary.lookup2.consumer.DefaultTermConsumer">
      <properties>
         <property key="codingScheme" value="Umls"/>
      </properties>
   </rareWordConsumer>
</lookupSpecification>
